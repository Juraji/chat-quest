{{- /*gotype: juraji.nl/chat-quest/processing/chat_responses.instructionTemplateVars*/ -}}
```rag.xml
{{if .WorldDescription}}
<WorldDescription>
  {{.WorldDescription}}
</WorldDescription>
{{end}}
{{if .ScenarioDescription}}
<Scenario>
  {{.ScenarioDescription}}
</Scenario>
{{end}}
<Characters>
  <Character>
    <Id>{{.Character.ID}}</Id>
    <Name>{{.Character.Name}}</Name>
    {{if .Character.Appearance}}
    <Appearance>
      {{.Character.Appearance}}
    </Appearance>
    {{end}}
    {{if .Character.Personality}}
    <Personality>
      {{.Character.Personality}}
    </Personality>
    {{end}}
    {{if .Character.History}}
    <History>
      {{.Character.History}}
    </History>
    {{end}}
    {{if .DialogueExamples}}
    <DialogExamples>
      {{range $ex := .DialogueExamples}}
        <DialogExample>{{$ex}}<DialogExample>
      {{end}}
    </DialogExamples>
    {{end}}
  </Character>
  {{if .OtherParticipants}}
    {{range $c := .OtherParticipants}}
      <Character>
        <Id>{{$c.ID}}</Id>
        <Name>{{$c.Name}}</Name>
        {{if $c.Appearance}}
        <Appearance>
          {{$c.Appearance}}
        </Appearance>
        {{end}}
      </Character>
    {{end}}
  {{end}}
</Characters>
{{if .Persona}}
  <UserPersona>
    <!-- This information describes the user, it is not a character in the chat -->
    <Name>{{.Persona.Name}}</Name>
    {{if .Persona.Appearance}}
    <Appearance>
      {{.Persona.Appearance}}
    </Appearance>
    {{end}}
    {{if .Persona.Personality}}
    <Personality>
      {{.Persona.Personality}}
    </Personality>
    {{end}}
    {{if .Persona.History}}
    <History>
      {{.Persona.History}}
    </History>
    {{end}}
  </UserPersona>
{{end}}
```

